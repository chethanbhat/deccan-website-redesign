body
    background-color #E8CEFB
    color #492B6F
    font-size 16px
    padding 0

#outer-card,
.purple-card
    background-color #492B6F
    color #F4EBFF

.pink-card
    background-color #E8CEFB
    color #492B6F

.category-name
    color #492B6F

.menu-icon
    position: absolute
    cursor pointer
    top 1%
    left 2.5%

#main-footer
    background-color #492B6F
    color #F4EBFF
    margin 5% 0 0 0

.brand-lead
    font-size 2rem

a.creator
    color red

// Media Page
.youtube-ads
    width 100%
    min-height 480px
.media-container
    padding 2.5% 0    

// Contact Page

.google-map
    display block
    width 100%
    min-height 360px
    margin 0 auto
.address
    line-height 2

// Forms
.input-field label
    color #E8CEFB
.input-field input[type=text],
.input-field input[type=email],
.input-field input[type=number],
.input-field textarea
    color #E8CEFB
.input-field input[type=text]:focus + label
    color #E8CEFB
.input-field input[type=text]:focus
    border-bottom: 1px solid #E8CEFB;
    box-shadow: 0 1px 0 0 #E8CEFB; 
.input-field input[type=text].valid
    border-bottom: 1px solid #E8CEFB;
    box-shadow: 0 1px 0 0 #E8CEFB;
.input-field input[type=text].invalid
    border-bottom: 1px solid #E8CEFB;
    box-shadow: 0 1px 0 0 #E8CEFB;
.input-field .prefix.active
    color: #E8CEFB;        

// Side Navigation
   
.sidenav
    background-color #F4EBFF
    display flex
    flex-direction column
    #menu-close
        align-self flex-end
        margin-right 2.5%
        margin-top 2.5%
        cursor pointer
    .brand
        display block
        img
            display: block
            margin 20px auto
            padding 10px

    .nav
        padding 25px
        padding-left 50px
        li
            margin: 5px 0
        a
            color: #492B6F
            font-size: 1.2rem
    #footer
        align-self: center

.content
    min-height: 100vh
    .lead
        font-weight bold
        color #636363
    .solutions-card
        height 450px
    .category-card
        height 360px
    .ritz-card
        height 500px
        background-color #E8CEFB
    .category-page-img
        max-height 50vh
    .category-title, .page-title
        margin 1% auto !important
    .category-description, .page-description
        line-height: 1.2
        margin 2.5% auto !important
        text-align justify
    .feature-list
        list-style-type square
        margin-left 20px
    .label
        color black
.btn 
	border none
    width 200px
	color #000
	background #fff
	cursor pointer
	display inline-block
	font-weight 700
	position relative
    outline none
    box-shadow 0 6px #cecece
    border-radius 5px
    margin-right 6px

.wrapper
    min-height 100vh
    background-image url(../images/banner_new_1.png)
    background-size cover

.main-nav
    min-height 100px
    padding-top 10px
    background-color #F4EBFF
    a
        color #492B6F
        font-size 1.2rem
.slider-card
    padding 5%        
.slider-card img
    width 300px
    height 250px
.owl-prev,
.owl-next
    font-size 30px !important
    margin 0 10px !important
#new-arrival-carousel
    height 680px    
    margin-top -300px
.btn-social
    margin 5px  
#home-menu-toggle      
    display none
.category-page-img
    object-fit: cover
#dining-cover-pic
    background-image: url('../images/cover/tables.png')
.cover-pic
    min-height: 720px
    background-attachment: fixed;
    background-size: cover;
    background-repeat: no-repeat;   


.errors
    color maroon
    font-size 0.9rem
    margin-bottom 20px

#quote-modal
    label
        color #492B6F
    input
        color #492B6F
    input::placeholder
        color #999999

// Medium Devices
@media screen and (max-width: 900px)
    .solutions-card
        max-height 325px
    .category-card
        min-height 400px
    .ritz-card
        min-height 525px
    #home-menu-toggle      
        display block           

// Mobile Phone
@media screen and (max-width: 600px)
    .solutions-card
        max-height 400px
    .category-card
        min-height 400px
    #home-menu-toggle      
        display block        
        




