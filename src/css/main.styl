body
    background-color azure
    font-size 16px
    padding 0

.menu-icon
    position: absolute
    cursor pointer
    top 1%
    left 2.5%

// Side Navigation
   
.sidenav
    background-color moccasin
    display flex
    flex-direction column
    #menu-close
        align-self flex-end
        margin-right 2.5%
        margin-top 2.5%
        cursor pointer
    .brand
        display block
        img
            display: block
            margin 20px auto
            padding 10px

    .nav
        padding 25px
        padding-left 50px
        li
            margin: 5px 0
        a
            color: #333
            font-weight: bold
            font-size: 1.2rem
    #footer
        align-self: center

.content
    min-height: 100vh
    .lead
        font-weight bold
        color #636363
    .solutions-card
        height 450px
    .category-card
        height 360px
    .ritz-card
        height 500px
    .category-page-img
        max-height 50vh
    .category-title, .page-title
        margin 1% auto !important
    .category-description, .page-description
        line-height: 1.2
        margin 2.5% auto !important
        text-align justify
    .feature-list
        list-style-type square
        margin-left 20px
 
    form
        text-align center
        padding 20px 20px
        color red

    label
        color #C62828 
        font-weight 300
        z-index 1
        font-weight 700
    .label
        color black
.btn 
	border none
    width 200px
	color #000
	background #fff
	cursor pointer
	display inline-block
	font-weight 700
	position relative
    outline none
    box-shadow 0 6px #cecece
    border-radius 5px
    margin-right 6px

// Medium Devices
@media screen and (max-width: 900px)
    .solutions-card
        max-height 325px
    .category-card
        min-height 400px
    .ritz-card
        min-height 525px        

// Mobile Phone
@media screen and (max-width: 600px)
    .solutions-card
        max-height 400px
    .category-card
        min-height 400px

.wrapper
    min-height 100vh
    background-image url(../images/banner_new_1.png)
    background-size cover


     

